<Application x:Class="MasterBoxGetWeight.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MasterBoxGetWeight"
              xmlns:sys="clr-namespace:System;assembly=mscorlib"
             StartupUri="MainWindow.xaml">

    <Application.Resources>
        <ResourceDictionary>
            <SolidColorBrush Color="#555555" x:Key="color_border"/>
            <SolidColorBrush Color="#43d854" x:Key="color_click"/>
            <SolidColorBrush Color="#fdffc2" x:Key="color_mouseover"/>
            <SolidColorBrush Color="#acffa3" x:Key="color_selected"/>
            <SolidColorBrush Color="#f9fc88" x:Key="color_focused"/>
            <SolidColorBrush Color="#c9c9c9" x:Key="color_disable"/>
            <SolidColorBrush Color="Orange" x:Key="color_wait"/>
            <SolidColorBrush Color="Lime" x:Key="color_pass"/>
            <SolidColorBrush Color="Red" x:Key="color_fail"/>
            <SolidColorBrush Color="Black" x:Key="color_ready"/>
            <sys:Double x:Key="fontSizeNormal">14</sys:Double>
            <sys:Double x:Key="fontSizeButton">17</sys:Double>
            <sys:Double x:Key="fontSizeHeader">15</sys:Double>
            <sys:Double x:Key="fontSizeTabItem">15</sys:Double>
            <sys:Double x:Key="fontSizeController">17</sys:Double>
        </ResourceDictionary>
    </Application.Resources>

</Application>
